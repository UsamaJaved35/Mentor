@model Tutor_Finder.Models.Tutor
<body>
    <section style="background-color: #eee;">
        <h1 class="my-5 text-center" style="color:#198754">@Model.FirstName's Profile</h1>
        <div class="container">
            <div class="row">
                <div class="col-lg-4">
                    <div class="card mb-4">
                        <div class="card-body text-center">
                            <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-chat/ava3.webp"
                                 alt="avatar" class="rounded-circle img-fluid" style="width: 150px;">
                            <h5 class="my-3">@Model.FirstName @Model.LastName</h5>
                            <p class="text-muted mb-1">@Model.Subject1 Teacher</p>
                            <p class="text-muted mb-4">@Model.City ,@Model.Country</p>
                            <div class="d-flex justify-content-center mb-2">
                                <a asp-controller="Tutor" asp-action="TutorProfileUpdate">
                                    <button type="button" class="btn btn-success">Edit Profile</button>
                                </a>
                                <a href="">
                                    <button type="button" class="btn btn-outline-success ms-1">See Requests</button>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-8">
                    <div class="card mb-4">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-sm-3">
                                    <p class="mb-0" style="color:#198754">
                                        <i class="fa fa-user-circle-o" aria-hidden="true"></i>&nbsp; First Name
                                    </p>
                                </div>
                                <div class="col-sm-9">
                                    <p class="text-muted mb-0">@Model.FirstName</p>
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <p class="mb-0" style="color:#198754">
                                        <i class="fa fa-user-circle-o" aria-hidden="true"></i>&nbsp; Last Name
                                    </p>
                                </div>
                                <div class="col-sm-9">
                                    <p class="text-muted mb-0">@Model.LastName</p>
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <p class="mb-0" style="color:#198754">
                                        <i class="fa fa-key" aria-hidden="true"></i>&nbsp;Password
                                    </p>
                                </div>
                                <div class="col-sm-9">
                                    <p class="text-muted mb-0">@Model.Password</p>
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <p class="mb-0" style="color:#198754">
                                        <i class="fa fa-mars-stroke-v"></i>&nbsp;Gender
                                    </p>
                                </div>
                                <div class="col-sm-9">
                                    <p class="text-muted mb-0">@Model.Gender</p>
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <p class="mb-0" style="color:#198754">
                                        <i class="fa fa-graduation-cap" aria-hidden="true"></i>&nbsp;Qualification
                                    </p>
                                </div>
                                <div class="col-sm-9">
                                    <p class="text-muted mb-0">@Model.Qualification</p>
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <p class="mb-0" style="color:#198754">
                                        <i class="fa fa-book" aria-hidden="true"></i>&nbsp;Subject 1
                                    </p>
                                </div>
                                <div class="col-sm-9">
                                    <p class="text-muted mb-0">@Model.Subject1</p>
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <p class="mb-0" style="color:#198754">
                                        <i class="fa fa-money" aria-hidden="true"></i>&nbsp;Fee for Subject1
                                    </p>
                                </div>
                                <div class="col-sm-9">
                                    <p class="text-muted mb-0">@Model.Fee1</p>
                                </div>
                            </div>
                            <hr>
                    
                            <div class="row">
                                <div class="col-sm-3">
                                    <p class="mb-0" style="color:#198754">
                                        <i class="fa fa-book" aria-hidden="true"></i>&nbsp; Subject 2
                                    </p>
                                </div>
                                <div class="col-sm-9">
                                    <p class="text-muted mb-0">@Model.Subject2</p>
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <p class="mb-0" style="color:#198754">
                                        <i class="fa fa-money" aria-hidden="true"></i>&nbsp;Fee for Subject2
                                    </p>
                                </div>
                                <div class="col-sm-9">
                                    <p class="text-muted mb-0">@Model.Fee2</p>
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <p class="mb-0" style="color:#198754">
                                        <i class="fa fa-thumbs-up" aria-hidden="true"></i>&nbsp;Availability
                                    </p>
                                </div>
                                <div class="col-sm-9">
                                    @if ((bool)Model.Availability)
                                    {
                                        <p class="text-muted mb-0">Available</p>
                                    }
                                    else
                                    {
                                        <p class="text-muted mb-0">Not Available</p>
                                    }
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <p class="mb-0" style="color:#198754">
                                        <i class="fa fa-flag" aria-hidden="true"></i>&nbsp; Country
                                    </p>
                                </div>
                                <div class="col-sm-9">
                                    <p class="text-muted mb-0">@Model.Country</p>
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <p class="mb-0" style="color:#198754">
                                        <i class="fa fa-history" aria-hidden="true"></i>&nbsp;Experience
                                    </p>
                                </div>
                                <div class="col-sm-9">
                                    <p class="text-muted mb-0">@Model.Experience years</p>
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <p class="mb-0" style="color:#198754">
                                        <i class="fa fa-home" aria-hidden="true"></i>&nbsp;City
                                    </p>
                                </div>
                                <div class="col-sm-9">
                                    <p class="text-muted mb-0">@Model.City</p>
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <p class="mb-0" style="color:#198754">
                                        <i class="fa fa-envelope" aria-hidden="true"></i>&nbsp;Email
                                    </p>
                                </div>
                                <div class="col-sm-9">
                                    <p class="text-muted mb-0">@Model.Email</p>
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <p class="mb-0" style="color:#198754">
                                        <i class="fa fa-phone" aria-hidden="true"></i>&nbsp;Phone Code
                                    </p>
                                </div>
                                <div class="col-sm-9">
                                    <p class="text-muted mb-0">@Model.PhoneCode</p>
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <p class="mb-0" style="color:#198754">
                                        <i class="fa fa-phone" aria-hidden="true"></i>&nbsp;Phone Number
                                    </p>
                                </div>
                                <div class="col-sm-9">
                                    <p class="text-muted mb-0">@Model.PhoneNumber</p>
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <p class="mb-0" style="color:#198754">
                                        <i class="fa fa-address-card-o" aria-hidden="true"></i>&nbsp;Address
                                    </p>
                                </div>
                                <div class="col-sm-9">
                                    <p class="text-muted mb-0">@Model.Address</p>
                                </div>
                            </div>
                            <!--PROGRESSS-->
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="d-flex align-items-center mb-3">Overall Performance Status</h5>
                                <p>Student Satisfaction</p>
                                <div class="progress mb-3" style="height: 5px">
                                    <div class="progress-bar bg-primary" role="progressbar" style="width: 80%"
                                         aria-valuenow="80" aria-valuemin="0" aria-valuemax="100"></div>
                                </div>
                                <p>Subject Grip</p>
                                <div class="progress mb-3" style="height: 5px">
                                    <div class="progress-bar bg-danger" role="progressbar" style="width: 72%"
                                         aria-valuenow="72" aria-valuemin="0" aria-valuemax="100"></div>
                                </div>
                                <p>Proper Time Management</p>
                                <div class="progress mb-3" style="height: 5px">
                                    <div class="progress-bar bg-success" role="progressbar" style="width: 89%"
                                         aria-valuenow="89" aria-valuemin="0" aria-valuemax="100"></div>
                                </div>
                                <p>Teaching Style</p>
                                <div class="progress mb-3" style="height: 5px">
                                    <div class="progress-bar bg-warning" role="progressbar" style="width: 55%"
                                         aria-valuenow="55" aria-valuemin="0" aria-valuemax="100"></div>
                                </div>
                                <!-- <p></p>
                                <div class="progress" style="height: 5px">
                                    <div class="progress-bar bg-info" role="progressbar" style="width: 66%" aria-valuenow="66" aria-valuemin="0" aria-valuemax="100"></div>
                                </div> -->
                            </div>
                        </div>
                        <!---->
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>